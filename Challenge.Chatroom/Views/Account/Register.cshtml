
@{
    Layout = null;
}

@model Challenge.Chatroom.Db.Model.User

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>Registrarse</title>
</head>
<body>

    <div style="margin: 10% auto;width: 400px;padding: 20px;border: 1px solid #ddd;">
        Registrarse<br /><br />
        <form method="post" asp-controller="Account" asp-action="RegisterUser">
            <div>
                <label asp-for="FullName">Nombres:</label>
                <input asp-for="FullName" required />
            </div>
            <br />
            <div>
                <label asp-for="Identification">Usuario:</label>
                <input asp-for="Identification" required />
            </div>
            <br />
            <div>
                <label asp-for="Password">Contraseña:</label>
                <input asp-for="Password" required type="password" />
            </div>
            <br /><br />
            <input type="submit" value="Register" />
            <a href="/account/login">Login</a>

        </form>

    </div>

</body>
</html>
